{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "draw",
  "version": "0.1.0",
  "identifier": "com.jodusmelodus.draw",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Draw",
        "backgroundColor": "#000000",
        "center": true,
        "titleBarStyle": "Overlay",
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}